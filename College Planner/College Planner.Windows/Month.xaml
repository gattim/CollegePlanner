        </Grid>
        <Grid Grid.Row="3" Grid.Column="5">
            <local:Day x:Name="day13" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="3" Grid.Column="6">
            <local:Day x:Name="day14" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="0">
            <local:Day x:Name="day15" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="1">
            <local:Day x:Name="day16" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="2">
            <local:Day x:Name="day17" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="3">
            <local:Day x:Name="day18" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="4">
            <local:Day x:Name="day19" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="5">
            <local:Day x:Name="day20" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="4" Grid.Column="6">
            <local:Day x:Name="day21" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="0">
            <local:Day x:Name="day22" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="1">
            <local:Day x:Name="day23" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="2">
            <local:Day x:Name="day24" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="3">
            <local:Day x:Name="day25" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="4">
            <local:Day x:Name="day26" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="5" Grid.Column="5">
