        </Grid>
        <Grid Grid.Row="6" Grid.Column="1">
            <local:Day x:Name="day30" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="2">
            <local:Day x:Name="day31" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="3">
            <local:Day x:Name="day32" PointerPressed="Day_PointerPressed"/>
        </Grid>
        <Grid Grid.Row="6" Grid.Column="4">
            <local:Day x:Name="day33" PointerPressed="Day_PointerPressed"/>
